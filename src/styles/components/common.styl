html, body
    height 100%
    min-height 100%


html
  box-sizing: border-box;

*, *:before, *:after 
  box-sizing: inherit


body 
    font-family -apple-system,Segoe UI,Roboto,sans-serif
    color $text
    line-height normal
    background $bg
    @media $m
        &.modal-active
            overflow hidden

[class$="__inner"]
    max-width 1200px
    margin 0 auto
    padding 0 20px

h1
    font-size 24px
    font-weight 500
    margin-bottom 24px

h2
    font-size 21px
    font-weight 500
    margin-bottom 18px

h3
    font-size 18px
    font-weight 500
    margin-bottom 20px

p
    margin 0 0 18px

b
    font-weight 500

a
    text-decoration none

ul, ol 
  list-style-position: inside;
  margin: 0 0 30px;
  padding: 0;
  li
    margin-bottom 12px
    img
        display block
        margin-top 8px

ul 
  list-style-type: disc;

ol 
  list-style-type: decimal;

ul ul, ul ol, ol ul, ol ol 
  margin-left: 20px; /* Отступ для вложенных списков */

.btn
    padding 4px 20px
    border-radius 6px
    min-height 40px
    font-size 18px
    display flex
    align-items center
    justify-content center
    background $purple
    color #fff

.t-center
    text-align center
.t-right
    text-align right

.page-wrapper
    display flex
    flex-flow column
    min-height: 100%

.header
    position sticky
    top 0
    background #fff
    box-shadow 0 16px 24px rgba(104,106,115,.08), 0 2px 8px rgba(104,106,115,.06)
    z-index 1000
    &__inner
        padding 10px 20px
        display flex
        justify-content space-between
        align-items center
    &__logo
        transition all 0.3s ease
        background #fff
        &:hover
            opacity 0.8

.menu
    display flex
    &__item
        display flex
        align-items center
        text-decoration none
        margin 0 15px
        font-size 14px
        color #000
        @media $m
            flex-flow column
        .footer &
            color #fff
        &:last-child
            margin-right 0
        &-icon
            display flex
            align-items center
            justify-content center
            font-size 24px
            width 40px
            height 40px
            color $blue
            .footer &
                color #fff
        &:hover
        &:hover &-icon
            color $purple

.header 
    @media $m768
        &__logo
            width 100%
            background #fff
            padding 12px 0 6px
        &__logo img
            width 240px
        &__inner
            padding 0 12px
        .menu
            position fixed
            border-top 1px solid rgba(0,0,0,0.1)
            top 85px
            left 0
            width 100%
            background #fff
            padding 30px
            flex-flow row wrap
            padding 20px
            transform translateY(-300px)
            z-index -1
            transition transform 0.3s ease, box-shadow 0.3s ease
            &.active
                box-shadow 0 24px 24px rgba(104,106,115,0.08), 0 2px 8px rgba(104,106,115,0.06)
                transform translateY(0)
            &__item
                width 100%
                flex-flow row wrap
                margin 0 auto
                display flex
                justify-content: center
                padding-bottom 4px
                text-transform: uppercase
                &-title
                    width 100px
    @media $s
        &__logo img
            width 180px
        .menu
            top 70px

.hamburger
    display none
    @media $m768
        display block
        margin-top 8px
        margin-right -12px


.content
    min-height 100%
    &__inner
        min-height 100%
    &.mainpage &__inner
        padding 50px 20px
        @media $m
            padding-top 30px

.input
.select
    display block
    border 1px solid #ccc
    border-radius 4px
    height 40px
    padding 0 20px
    outline 0
    &:focus
        border-color $purple

.select
    appearance: none;
    background url('../i/arrow-d.svg') no-repeat right 6px center #fff;
    background-size 26px auto

.search
    display flex
    margin-bottom 16px
    @media $m
        margin-bottom 30px
    @media $m860
        flex-flow row wrap
    &__submit
        background $blue
        color #fff
        font-size 24px
        display flex
        align-items center
        justify-content center
        border 0
        border-radius 4px
        width 80px
        cursor pointer
        &:hover
            background $purple
        @media $m860
            height 40px
            margin-left 8px
    .input
        width 100%
        @media $m860
            width calc(100% - 88px)
    .select
        margin 0 10px
        max-width 400px
        @media $m860
            order -1
            max-width 100%
            width 100%
            margin 0 0 8px

.card
    display flex
    border-radius 10px
    overflow hidden
    background #fff
    box-shadow 0px 7px 20px -8px rgba(157,157,163,0.4)
    transition all 0.3s ease
    margin-bottom 20px
    &:hover
        box-shadow 0px 7px 20px -8px rgba(157,157,163,1)
    &__cover
        width 320px
        min-height 100%
        background-size cover
        background-position center
        flex 0 0 auto
    &__text
        padding 20px
        display flex
        flex-flow column
        &-title
            color $text
            margin-bottom 20px
            text-decoration: none
            font-size 18px
            font-weight 500
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            display: -webkit-box;
            overflow: hidden;
            text-overflow: ellipsis;
            &:hover
                color $purple
        &-content
            color $text
            text-decoration: none
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 3;
            line-clamp: 3;
            display: -webkit-box;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom 20px
        &-date
            font-size 12px
            margin-top auto
            margin-left auto
            color $textGray

.list
    &_grid
        display flex
        flex-flow row wrap
        margin 0 -8px
        .card
            width calc(20% - 16px)
            height 350px
            margin 0 8px 20px
            flex-flow column
            &__cover
                width 100%
                min-height 150px
                background-position center
            &__text
                display flex
                flex-flow column
                height 100%
            &__text-content
                display none
            &__text-title
                font-size 16px
                -webkit-line-clamp: 6;
                line-clamp: 6;
            &__text-date
                margin-top auto
            .tags
               display none

.list
    @media $m
        display flex
        flex-flow row wrap
        margin 0 -8px
        .card
            width calc(25% - 16px)
            height 350px
            margin 0 8px 20px
            flex-flow column
            &__cover
                width 100%
                min-height 150px
                background-position center
            &__text
                display flex
                flex-flow column
                height 100%
            &__text-content
                display none
            &__text-title
                font-size 16px
                -webkit-line-clamp: 6;
                line-clamp: 6;
            &__text-date
                margin-top auto
            .tags
               display none
    @media $m860
        .card
            width calc(33.33% - 16px)
    @media $m768
        .card
            width calc(50% - 16px)
    @media $s
        .card
            width 100%
            height 320px

.tags
    &__item
        display inline-block
        font-size 13px
        background $bgGray
        margin-right 8px
        border-radius 4px
        color $text
        text-decoration none
        padding 4px 8px
        margin-bottom 6px
        &:before
            content '#'
        &:hover
            color $purple


.footer
    background rgba(3,4,9,0.8)
    color #fff
    font-size 14px
    margin-top auto
    &__inner
        padding 60px 20px
        @media $m
            padding-bottom 90px
    &__row
        display flex
        justify-content: space-between
        @media $m
            flex-flow column
    &__logo
        display block
        margin-bottom 20px
    &__text
        max-width 500px
    a
        color $purpleLight
        &:hover
            filter brightness(120%)
    &__col
        &-right
            padding-left 26px
            @media $m
                padding-left 0
            p
                margin-bottom 23px
    &__contacts
        display flex
        &-item
            display flex
            align-items center
            margin-right 24px
            &-icon
                display flex
                align-items center
                font-size 18px
                margin-right 8px
    .menu
        margin-top -10px
        margin-bottom 20px
        @media $m
            margin-top 20px
            margin-bottom 30px
        @media $s
            display none
    .menu__item:first-child
        margin-left 0
    .menu__item:hover,
    .menu__item:hover .menu__item-icon
        color $purpleLight